{
    "name": "forge/yii-form-validator",
    "type": "library",
    "description": "Implementación de la validación de Yii3 en formularios",
    "keywords": [
        "yii",
        "form",
        "validator"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "forge/form": "^1.0@dev",
        "yiisoft/translator-message-php": "^1.0",
        "yiisoft/validator": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "roave/infection-static-analysis-plugin": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "Forge\\FormValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\FormValidator\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "common": [
                "common/*.php"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
